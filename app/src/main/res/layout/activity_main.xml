<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.popmovies.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/error_message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding_m"
        android:text="@string/error_message"
        android:textSize="@dimen/text_size_m"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/favorite_empty_message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding_m"
        android:text="@string/error_message"
        android:textSize="@dimen/text_size_m"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_height="@dimen/progress_bar_length"
        android:layout_width="@dimen/progress_bar_length"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>
